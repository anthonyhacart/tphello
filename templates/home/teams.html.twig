{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <h1>Team index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Flag</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td>{{ team.flag }}</td>
                <td>
                    <a href="{{ path('game_new', {'id': team.id}) }}">Créer un match pour cette équipe</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
